<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activities.IntroduceQuestion">


    <ImageView
        android:id="@+id/img_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:scaleType="centerCrop"
        android:src="@drawable/blur_back1" />


    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:src="@drawable/circle_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/activity_question_LL_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/common_google_signin_btn_text_light_default"
        app:layout_constraintTop_toBottomOf="@+id/img_logo"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/activity_question_TV_lets_know_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="let's know you"
            android:textColor="@color/white"
            android:textSize="48sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/activity_question_TV_money"
            android:fontFamily="@font/annie_use_your_telescope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:text="what do you want to learn?"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/activity_question_TV_select_proffession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/akaya_telivigala"
            android:padding="8dp"
            android:textSize="18dp"
            android:drawablePadding="16dp"
            android:hint="Select Proffession"
            android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
            android:background="@color/browser_actions_bg_grey"
            />

<!--        <TextView-->
<!--            android:id="@+id/activity_question_TV_cost"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:paddingLeft="10dp"-->
<!--            android:layout_marginBottom="20dp"-->
<!--            android:fontFamily="@font/akaya_telivigala"-->
<!--            android:gravity="left"-->
<!--            android:text="how is the cost "-->
<!--            android:textColor="@color/black"-->
<!--            android:textSize="35dp" />-->

        <TextView
            android:id="@+id/activity_question_TV_SeekBar_cost_rating"
            android:fontFamily="@font/annie_use_your_telescope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="60dp"
            android:text="how you moveable?:      5"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <SeekBar
            android:id="@+id/activity_question_SeekBar_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:progress="5"/>

        <TextView
            android:fontFamily="@font/annie_use_your_telescope"
            android:id="@+id/activity_question_TV_SeekBar_distance_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="60dp"
            android:text="How the price is important:      5"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <SeekBar
            android:id="@+id/activity_question_SeekBar_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:max="10"
            android:progress="5"/>

        <TextView
            android:fontFamily="@font/annie_use_your_telescope"
            android:id="@+id/activity_question_TV_SeekBar_rating_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="60dp"
            android:text="How is the rating:      5"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <SeekBar
            android:id="@+id/activity_question_SeekBar_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:max="10"
            android:progress="5"/>

        <TextView
            android:id="@+id/activity_question_TV_select_long_lesson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/akaya_telivigala"
            android:padding="8dp"
            android:textSize="18dp"
            android:drawablePadding="16dp"
            android:hint="Select perefer"
            android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
            android:background="@color/browser_actions_bg_grey"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/activity_question_LL_question"
        tools:ignore="MissingConstraints,UnknownId">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/activity_question_BTN_submit"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/black"
            android:clickable="true"
            android:padding="10dp"
            android:text="@string/submit_label"
            android:textSize="21sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>