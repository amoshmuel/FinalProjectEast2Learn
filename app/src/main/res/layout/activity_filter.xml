<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activities.FilterActivity"
    android:background="@drawable/blur_back1">

    <TextView
        android:id="@+id/activity_filter_TV_SeekBar_title"
        android:fontFamily="@font/annie_use_your_telescope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Filter &amp; Sort"
        android:textColor="@color/white"
        android:textSize="50dp"
        tools:ignore="MissingConstraints" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="200dp"
        android:id="@+id/activity_filter_LO"
        android:background="@color/common_google_signin_btn_text_light_default">

        <TextView
            android:id="@+id/activity_filter_TV_SeekBar_title_rating"
            android:fontFamily="@font/annie_use_your_telescope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginTop="30dp"
            android:paddingLeft="60dp"
            android:text="Select the min rate for teacher: 0"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <SeekBar
            android:id="@+id/activity_filter_SeekBar_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:progress="0"/>


        <TextView
            android:id="@+id/activity_filter_TV_SeekBar_title_dist"
            android:fontFamily="@font/annie_use_your_telescope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginTop="30dp"
            android:paddingLeft="60dp"
            android:text="Select the max distance from teacher: 20"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <SeekBar
            android:id="@+id/activity_filter_SeekBar_dist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="20"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:progress="20"/>

        <TextView
            android:id="@+id/activity_filter_TV_SeekBar_title_price"
            android:fontFamily="@font/annie_use_your_telescope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginTop="30dp"
            android:paddingLeft="60dp"
            android:text="Select the max price for lesson: 200"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <SeekBar
            android:id="@+id/activity_filter_SeekBar_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="200"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:progress="200"/>

        <TextView
            android:id="@+id/activity_filter_TV_select_proffession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/akaya_telivigala"
            android:textSize="18dp"
            android:paddingLeft="15dp"
            android:hint="Select Proffession"
            android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
            android:background="@color/browser_actions_bg_grey"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/activity_filter_LO"
        tools:ignore="MissingConstraints,UnknownId">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/activity_filter_BTN_submit"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/black"
            android:clickable="true"
            android:padding="10dp"
            android:text="@string/submit_label"
            android:textSize="21sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>