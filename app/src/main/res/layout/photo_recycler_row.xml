<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:padding="10dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/photoRow_IMG_holder"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@mipmap/ic_camera"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/photoRow_LBL_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_label"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/photoRow_LBL_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/body_label"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/photoRow_LBL_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/photoRow_LBL_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rating"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/photoRow_LBL_pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/photoRow_LBL_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>

    </LinearLayout>
</LinearLayout>